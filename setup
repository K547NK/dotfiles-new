#!/bin/sh

#install both display manager and server also add window manager and compositor
sudo pkg install drm-kmod i3-gaps sddm compton feh xorg hal scrot polybar i3lock neofetch lynx vim feh zsh rofi ImageMagick7

#details
sudo echo 'hald_enable="YES"' > /etc/rc.conf &&
sudo echo 'dbus_enable="YES"' > /etc/rc.conf &&
sudo echo 'sddm_enable="YES"' > /etc/rc.conf &&
sudo echo 'kld_list="/boot/modules/amdgpu.ko"' > /etc/rc.conf &&
sudo mkdir -p /usr/share/sddm/faces/ && sudo cp -r ~/dotfiles/nigel.face.icon /usr/share/faces/

mkdir ~/.config && 
cp -r .config/* ~/.config/
cp .Xresources ~/
cp .vimrc ~/

sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
